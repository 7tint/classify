<%- include('../partials/header'); -%>
  <script src="/modules/@shopify/draggable/lib/draggable.bundle.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/@shopify/draggable@1.0.0-beta.8/lib/draggable.bundle.js"></script>

  <style>
    .grid {
    	display: grid;
    	grid-template: 150px 150px 150px / 150px 150px 150px 150px;
    	grid-gap: 10px;
    	background-color: #ffffff;
    	padding: 10px;
    }
    .draggable {
    	background-color: #ff3946;
    	box-shadow: 10px 10px 10px #7777;
    }

    .draggable, .droppable.draggable-dropzone--occupied{
    	width: 100px;
    	height: 100px;
    }
    .droppable{
    	width: 100px;
    	height: 100px;
    	border: solid;
    	display: flex;
    }
  </style>

  <div class="grid">
  	<div class="block">
  		<div class="droppable draggable-dropzone--occupied">
  			<div class="draggable"></div>
  		</div>
  	</div>

  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  	<div class="block">
  		<div class="droppable"></div>
  	</div>
  </div>

  <script>
    const containers = document.querySelectorAll('.block')

    const droppable = new Draggable.Droppable(containers, {
      draggable: '.draggable',
      droppable: '.droppable'
    });

  </script>

<%- include('../partials/footer'); -%>
