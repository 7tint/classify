<%- include('../partials/header'); -%>

  <div class="container">
    <h1 class="mb-1"><%= course.code %></h1>
    <% if (reviews.length > 0) { %>
      <% reviews.forEach(function(review) { %>
        <%= review %> <br/><br/>
        <button type="button" class="btn btn-secondary"><a class="text-white" href="/courses/<%=course.code%>/<%=review._id%>/edit">Edit Review</a></button>
        <form action="/courses/<%=course.code%>/<%=review._id%>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      <% }); %>
    <% } %>
    <br/><br/>
    <a href='/courses' class="btn btn-secondary">All Courses</a>
    <br/>
    <button type="button" class="btn btn-primary"><a class="text-white" href="/courses/<%=course.code%>/edit">Edit course</a></button>
    <br/>
    <button type="button" class="btn btn-warning"><a class="text-white" href="/courses/<%=course.code%>/reviews/new">Add Review</a></button>
  </div>

<%- include('../partials/footer'); -%>
